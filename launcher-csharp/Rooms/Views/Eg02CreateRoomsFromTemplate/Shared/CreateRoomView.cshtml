@model eg_03_csharp_auth_code_grant_core.Rooms.Models.RoomModel

<h4>Room</h4>
<form class="eg" asp-action="Create" method="post" data-busy="form">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input type="input" class="form-control" asp-for="Name" placeholder="Room name" required>
    </div>
    <div class="form-group">
        <label for="docSelect">Template</label>
        <select class="custom-select" asp-for="TemplateId" asp-items="@(new SelectList(Model.Templates, "RoomTemplateId","Name"))" required>
        </select>
    </div>
    <input type="hidden" name="_csrf" value="<%- csrfToken %>">
    <button type="submit" class="btn btn-primary">Submit</button>
</form>