@model DocuSign.CodeExamples.Click.Controllers.Eg04EmbedClickwrapController

<h4 id="example04">4. Embed a Clickwrap</h4>
<p>
    This example shows how to embed a clickwrap
</p>
<p>
    View source file <a target="_blank" href="@ViewBag.source">Eg04EmbedClickwrapController.cs</a> on GitHub.
</p>
<p>
    Uses the clickwrap that was created in the first step.
</p>

<form class="eg" asp-action="Activate" method="post" data-busy="form">
    <input type="hidden" name="_csrf" value="<%- csrfToken %>">
    <button type="button" onclick="showClickwrap()" class="btn btn-primary">Submit</button>
</form>


<div id="ds-click"></div>
<script src="https://demo.docusign.net/clickapi/sdk/latest/docusign-click.js"></script>
<script>
    var num = Math.floor(Math.random() * 10000);
    function showClickwrap(){
        docuSignClick.Clickwrap.render({
            environment: 'https://demo.docusign.net',
            accountId: '@ViewBag.AccountId',
            clickwrapId: '@ViewBag.ClickwrapId',
            clientUserId: num
        }, '#ds-click');
    }
</script>